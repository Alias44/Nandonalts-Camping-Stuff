<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Unfinished -->
	<ThingDef ParentName="UnfinishedBase">
		<defName>NCS_UnfinishedTent</defName>
		<label>unfinished tent</label>
		<graphicData>
			<texPath>CampingStuff/UnfinishedTent</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<stuffCategories Inherit="False">
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
	</ThingDef>

	<!-- Pole -->
	<ThingDef ParentName="TentPartSmith">
		<defName>NCS_TentPart_Pole</defName>
		<label>tent pole</label>
		<description>A set of short interlocking rods intended to hold up tents or other temporary structures.</description>
		<graphicData>
			<texPath>CampingStuff/TentPole</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<statBases>
			<MarketValue>1.2</MarketValue>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>500</WorkToMake>
			<Mass>0.2</Mass> 
			<Flammability>0.4</Flammability>
			<SharpDamageMultiplier>0.40</SharpDamageMultiplier>
			<BluntDamageMultiplier>0.9</BluntDamageMultiplier>
		</statBases>
		<tools>
			<li>
				<label>pole</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>7</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
		<comps>
			<li Class="Camping_Stuff.CompProperties_TentPart">
				<compClass>Camping_Stuff.CompUsable_TentPart</compClass>
				<partType>1</partType>
			</li>
			<li Class="Camping_Stuff.CompProperties_TentPartDamage"/>
		</comps>
	</ThingDef>

	<!-- Cover -->
	<ThingDef ParentName="TentPartTailored">
		<defName>NCS_TentPart_Cover_Small</defName>
		<label>small tent cover</label>
		<description>A 4x5 tent.</description>
		<graphicData>
			<texPath>CampingStuff/TentSmall</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>100</costStuffCount>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>10000</WorkToMake>
			<Mass>2</Mass>
		</statBases>
		<recipeMaker>
			<recipeUsers>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
		<comps>
			<li Class="Camping_Stuff.CompProperties_TentPart">
				<compClass>Camping_Stuff.CompUsable_TentPart</compClass>
				<partType>2</partType>
			</li>
			<li Class="Camping_Stuff.CompProperties_TentCover">
				<numPoles>5</numPoles>
				<tentLayoutSouth>
					<li>1,1,1,1,1</li>
					<li>1,4,3,4,1</li>
					<li>1,4,4,4,1</li>
					<li>1,1,2,1,1</li>
				</tentLayoutSouth>
			</li>
		</comps>
	</ThingDef>
	
