	<ThingDef ParentName="TentBase">
		<defName>DeployableTent</defName>
		<label>Deployable Tent</label>
		<description>A tent.</description>
		<graphicData>
			<texPath>CampingStuff/TentBag</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<costStuffCount>150</costStuffCount>
		<costList>
			<WoodLog>25</WoodLog>
		</costList>
		<statBases>
			<MarketValue>300</MarketValue>
			<MaxHitPoints>140</MaxHitPoints>
			<Mass>4.5</Mass>
			<WorkToMake>2500</WorkToMake>
		</statBases>
		<recipeMaker> 
			<recipeUsers>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
		<comps>
			<li Class="CompProperties_Usable">
				<useLabel>Deploy tent at...</useLabel>
			</li>
			<li Class="Nandonalt_CampingStuff.CompProperties_Tent">
				<compClass>Nandonalt_CampingStuff.CompTargetable_Tent</compClass>
				<tentLayoutSouth>
					<li>1,1,1,1,1</li>
					<li>1,4,3,4,1</li>
					<li>1,4,4,4,1</li>
					<li>1,1,2,1,1</li>
