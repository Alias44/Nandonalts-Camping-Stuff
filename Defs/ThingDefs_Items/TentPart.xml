	<!-- Pole -->
	<ThingDef ParentName="TentPartSmith">
		<defName>NCS_TentPart_Pole</defName>
		<label>Tent Pole</label>
		<description>A set of short interlocking rods intended to hold up tents or other temporary structures</description>
		<graphicData>
			<texPath>CampingStuff/TentPole</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<costStuffCount>5</costStuffCount>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<statBases>
			<MarketValue>1.2</MarketValue>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>500</WorkToMake>
			<Mass>0.4</Mass> 
			<Flammability>0.4</Flammability>
			<SharpDamageMultiplier>0.40</SharpDamageMultiplier>
			<BluntDamageMultiplier>0.9</BluntDamageMultiplier>
		</statBases>
		<stuffProps>
			<soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
			<soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
			<soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
			<statFactors>
				<MaxHitPoints>1</MaxHitPoints>
				<Beauty>1</Beauty>
				<Flammability>0.4</Flammability>
			</statFactors>
		</stuffProps>
		<tools>
			<li>
				<label>pole</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>7</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
		<comps>
			<li Class="Camping_Stuff.CompProperties_TentPart">
				<compClass>Camping_Stuff.CompUsable_TentPart</compClass>
				<useJob>NCS_PackBag</useJob>
				<partType>1</partType>
			</li>
		</comps>
	</ThingDef>

